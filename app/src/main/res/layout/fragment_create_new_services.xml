<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        tools:context=".ui.fragments.service_management.CreateNewServicesFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clTopContainerId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            app:layout_constraintTop_toTopOf="parent">


            <ImageView
                android:id="@+id/ivLeftArrow"
                android:layout_width="24dp"
                android:layout_height="25dp"
                android:src="@drawable/arrow_left"
                app:layout_constraintBottom_toBottomOf="@+id/tvCreateNewServices"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvCreateNewServices"
                app:tint="#040D1B" />

            <TextView
                android:id="@+id/tvCreateNewServices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create New Services"
                android:textColor="#040D1B"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/glSelectSubServices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".4" />

        <TextView
            android:id="@+id/tvProfessionalBeautyServices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Professional Beauty Services"
            android:textColor="#040D1B"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/clTopContainerId" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvCreateServices"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_65sdp"
            android:layout_marginTop="20dp"
            android:contentDescription="Todo"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvProfessionalBeautyServices"
            tools:itemCount="5"
            tools:listitem="@layout/rv_add_product_item_design" />

        <TextView
            android:id="@+id/tvSubServices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10dp"
            android:text="Sub-services"
            android:textColor="#040D1B"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/glSelectSubServices"
            app:layout_constraintStart_toStartOf="parent" />


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#B12525"
            app:cardCornerRadius="50dp"
            app:cardElevation="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/glSelectSubServices"
            app:layout_constraintEnd_toEndOf="@+id/containerSelectSubServices"
            app:layout_constraintTop_toTopOf="@+id/glSelectSubServices">

            <ImageView
                android:id="@+id/ivCross"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/cross" />
        </androidx.cardview.widget.CardView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/containerSelectSubServices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_cl_container_select_sub_services_background"
            app:layout_constraintTop_toBottomOf="@+id/glSelectSubServices">

            <EditText
                android:id="@+id/etDefault"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_margin="1dp"
                android:background="@drawable/custom_et_select_sub_services_background"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="Select sub services"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/llContainer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/llContainer"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_margin="1dp"
                android:background="@drawable/custom_ll_container_select_sub_services_background"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <View
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="5dp"
                    android:background="#C1BBBB" />

                <TextView
                    android:id="@+id/tvSROne"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="SR" />

                <EditText
                    android:id="@+id/etPriceOne"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/custom_et_background"
                    android:padding="10dp"
                    android:text="Price"
                    android:textColor="#51B0ED"
                    android:textSize="15sp" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/glTwo">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/glThree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="0dp" />


        </androidx.constraintlayout.widget.ConstraintLayout>


        <TextView
            android:id="@+id/tvAddMoreSubService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="+ Add more sub-services"
            android:textColor="@color/colorOne"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/containerSelectSubServices" />

        <TextView
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="230dp"
            android:background="@drawable/custom_products_save_btn_background"
            android:gravity="center"
            android:text="save"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@+id/tvAddMoreSubService" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
