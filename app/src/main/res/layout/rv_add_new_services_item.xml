<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/_10dp"
        android:background="@drawable/custom_rv_item_add_new_services_background">

        <TextView
            android:id="@+id/tvAddNewServicesItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Professional Beauty Service"
            android:textSize="18sp"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="0dp"
            android:paddingEnd="15dp"
            android:src="@drawable/greater"
            app:layout_constraintBottom_toBottomOf="@+id/tvAddNewServicesItem"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvAddNewServicesItem" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>