<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashScreenFragment">


    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.petpatandroidappdemo.ui.fragments.auth.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/actionLoginToRegisterFragment"
            app:destination="@id/registerFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/actionLoginToHomeActivity"
            app:destination="@id/homeActivity"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />


    </fragment>
    <fragment
        android:id="@+id/splashScreenFragment"
        android:name="com.example.petpatandroidappdemo.ui.fragments.auth.SplashScreenFragment"
        android:label="fragment_splash_screen"
        tools:layout="@layout/fragment_splash_screen">
        <action
            android:id="@+id/actionSplashToLoginFragment"
            app:destination="@id/loginFragment"
            app:enterAnim="@android:anim/fade_in"
            app:popUpTo="@id/splashScreenFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/actionSplashToHomeActivity"
            app:destination="@id/homeActivity" />

    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.petpatandroidappdemo.ui.fragments.auth.RegisterFragment"
        android:label="RegisterFragment"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/actionRegisterToOTPFragment"
            app:destination="@id/otpFragment"
            app:popUpTo="@id/registerFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/actionRegisterToLoginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/registerFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="model"
            app:argType="com.example.petpatandroidappdemo.models.response.RegisterResponseModel" />
    </fragment>
    <fragment
        android:id="@+id/otpFragment"
        android:name="com.example.petpatandroidappdemo.ui.fragments.auth.OTPFragment"
        android:label="OTPFragment"
        tools:layout="@layout/fragment_o_t_p">
        <action
            android:id="@+id/actionOTPToLoginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/otpFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="registerRequestModel"
            app:argType="com.example.petpatandroidappdemo.models.request.RegisterRequestModel" />


    </fragment>
    <activity
        android:id="@+id/homeActivity"
        android:name="com.example.petpatandroidappdemo.ui.activities.HomeActivity"
        android:label="activity_home"
        tools:layout="@layout/activity_home" />

</navigation>