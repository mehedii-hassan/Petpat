<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_service_management_nav_graph"
    app:startDestination="@id/HomeFragment">


    <fragment
        android:id="@+id/HomeFragment"
        android:name="com.example.petpatandroidappdemo.ui.fragments.home.HomeFragment"
        android:label="ExploreFragment"
        tools:layout="@layout/fragment_home">


        <action
            android:id="@+id/actionHomeToManageProductsActivity"
            app:destination="@id/manageProductsActivity" />
        <action
            android:id="@+id/actionHomeToManageServicesActivity"
            app:destination="@id/manageServicesActivity" />
    </fragment>
    <fragment
        android:id="@+id/notificationsFragment"
        android:name="com.example.petpatandroidappdemo.ui.fragments.home.NotificationsFragment"
        android:label="fragment_notifications"
        tools:layout="@layout/fragment_notifications" />
    <fragment
        android:id="@+id/ordersFragment"
        android:name="com.example.petpatandroidappdemo.ui.fragments.home.OrdersFragment"
        android:label="fragment_orders"
        tools:layout="@layout/fragment_orders" />
    <fragment
        android:id="@+id/accountsFragment"
        android:name="com.example.petpatandroidappdemo.ui.fragments.home.AccountsFragment"
        android:label="fragment_accounts"
        tools:layout="@layout/fragment_accounts" />
    <activity
        android:id="@+id/manageProductsActivity"
        android:name="com.example.petpatandroidappdemo.ui.activities.ManageProductsActivity"
        android:label="activity_manage_products"
        tools:layout="@layout/activity_manage_products" />
    <activity
        android:id="@+id/manageServicesActivity"
        android:name="com.example.petpatandroidappdemo.ui.activities.ManageServicesActivity"
        android:label="activity_manage_services"
        tools:layout="@layout/activity_manage_services" />
    <fragment
        android:id="@+id/orderStatusWithoutLoginFragment"
        android:name="com.example.petpatandroidappdemo.ui.fragments.browse_as_guest.OrderStatusWithoutLoginFragment"
        android:label="fragment_order_status_without_login"
        tools:layout="@layout/fragment_order_status_without_login" />
    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.petpatandroidappdemo.ui.activities.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />


</navigation>